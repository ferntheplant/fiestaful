---
export interface Props {
  eventName: string;
  eventDate?: string;
  eventTime?: string;
  eventLocation?: string;
  eventDescription?: string;
}

const { eventName, eventDate, eventTime, eventLocation, eventDescription } =
  Astro.props;
---

<!-- HERO SECTION: Main event title and visual theme -->
<section
  class="hero-section bg-gradient-to-r from-blue-500 to-purple-600 py-16 text-white"
>
  <div class="container mx-auto px-4 text-center">
    <h1 class="mb-6 text-4xl leading-tight font-bold md:text-6xl">
      {eventName}
    </h1>

    {
      eventDescription && (
        <p class="mx-auto mb-8 max-w-3xl text-xl opacity-90 md:text-2xl">
          {eventDescription}
        </p>
      )
    }

    <div class="mx-auto grid max-w-4xl grid-cols-1 gap-6 md:grid-cols-3">
      {
        eventDate && (
          <div class="rounded-lg bg-white/10 p-6 backdrop-blur-sm">
            <div class="mb-2 text-2xl font-semibold">📅 Date</div>
            <div class="text-lg">{eventDate}</div>
          </div>
        )
      }

      {
        eventTime && (
          <div class="rounded-lg bg-white/10 p-6 backdrop-blur-sm">
            <div class="mb-2 text-2xl font-semibold">🕐 Time</div>
            <div class="text-lg">{eventTime}</div>
          </div>
        )
      }

      {
        eventLocation && (
          <div class="rounded-lg bg-white/10 p-6 backdrop-blur-sm">
            <div class="mb-2 text-2xl font-semibold">📍 Location</div>
            <div class="text-lg">{eventLocation}</div>
          </div>
        )
      }
    </div>
  </div>
</section>
